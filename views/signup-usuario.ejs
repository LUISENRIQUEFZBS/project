<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/login.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <div class="box-center_flex">
            <form class="container" action="/usuario/signup" method="POST">
                <div class="datos">
                    <div id="page-title"><b>Crear nueva cuenta de cliente</b></div>
                    <legend class="legend">
                        <div>Información Personal</div>
                    </legend>
                    <div>
                        <label>Nombres <span class="asterisco">*</span></label>
                        <input type="text" name="nombres" class="inputText" autocomplete="off" required>
                    </div>
                    <div>
                        <label>Apellidos <span class="asterisco">*</span></label>
                        <input type="text" name="apellidos" class="inputText" autocomplete="off" required>
                    </div>
                </div>
                <div class="datos">
                    <legend class="legend">
                        <div>Información de inicio de sesión</div>
                    </legend>
                    <div>
                        <label>Correo electrónico <span class="asterisco">*</span></label>
                        <input type="email" name="email" class="inputText" autocomplete="off" required>
                    </div>
                    <div>
                        <label>Contraseña <span class="asterisco">*</span></label>
                        <input type="password" name="password" class="inputText" autocomplete="off" required>
                    </div>
                    <div>
                        <label>Confirmar Contraseña <span class="asterisco">*</span></label>
                        <input type="password" name="password2" class="inputText" autocomplete="off" required>
                    </div>
                    <div>
                        <span class="asterisco">*Campos obligatorios</span>
                    </div>
                    <div>
                        <button type="submit" class="btn-samsung">
                            <span>Crear una cuenta</span>
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </main>
<%- include('includes/end.ejs') %>