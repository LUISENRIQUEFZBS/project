<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/producto.css">
    
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <div style="display:grid;grid-template-columns: 1fr 4fr;">
            <div>
                <h4 style="color:gray">Opciones de Compra</h4>
                <div>
                    <div>CATEGORÍA</div>
                    <div>CLASE</div>
                    <div>FEATURE</div>
                    <div>COLOR</div>
                    <div>TAMAŃO DE PANTALLA</div>
                    <div>MEMORIA</div>
                    <div>CAMARA</div>
                </div>
            </div>
            <div>
                <h2> <%= title_productos %></h2>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let producto of prods) { %>
                            <article class="card product-item">
                            
                                <div class="card__image">
                                    <img src="<%= producto.src %>"
                                        alt="Un Libro">
                                </div>
                                <div class="card__content">
                                    <h1 class="product__title"><%= producto.nombre %></h1>
                                    <p class="product__description">Un libro sobre la historia de America</p>
                                </div>
                                <div class="card__actions">
                                    <button class="btn2">Añadir al carrito</button>
                                </div>
                            
                            </article>
                        <% } %>
                    </div>
                <% } else { %>
                    <h1>No hay productos</h1>
                <% } %>
            </div>
        </div>
    </main>
<%- include('includes/end.ejs') %>